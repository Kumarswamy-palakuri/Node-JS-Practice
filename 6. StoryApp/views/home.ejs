<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Story Submission</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h1>Welcome to Story Submission</h1>
    <div style="text-align: center;">
        <a href="/submit-story">Submit Story</a>
        <a href="/login">Login</a>
    </div>

    <div class="container">
        <!-- Main Section for Approved Stories -->
        <div class="main-content">
            <h2>Approved Stories</h2>
            <ul>
                <% stories.forEach(function(story) { %>
                    <% if (story.isApproved) { %>
                        <li><strong><%= story.title %></strong>: <%= story.content %></li>
                    <% } %>
                <% }) %>
            </ul>
        </div>

        <!-- Sidebar Section for Recent Stories -->
        <div class="sidebar">
            <h3>Recent Stories</h3>
            <ul>

                <% stories.slice(-5).forEach(function(story) { %> <!-- Show the 5 most recent stories -->
                  <% if(story.isApproved){ %>
                    <li><%= story.title %></li>
                <%} }) %>
            </ul>
        </div>
    </div>
</body>
</html>
