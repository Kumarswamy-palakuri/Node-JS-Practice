<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h2>Pending Stories for Approval</h2>
    <div class="admin-panel">
        <ul>
            <% stories.forEach(function(story) { %>
                <% if (!story.isApproved) { %>
                    <li>
                        <div>
                            <strong><%= story.title %></strong>: <%= story.content %>
                        </div>
                        <form action="/approve-story/<%= story._id %>" method="POST">
                            <button type="submit">Approve</button>
                        </form>
                    </li>
                <% } %>
            <% }) %>
        </ul>
    </div>
</body>
</html>
